---
import { BASE_URL } from "@constants/api";
---

<footer class='footer'>
  <div class='container'>
    <div>
      <h3>Astro</h3>
      <p>
        This is a demo website to show how the Astro framework works. Visit the <a
          href='https://astro.build'>official website</a
        > to learn more.
      </p>
    </div>
    <div>
      <h3>Links</h3>
      <ul>
        <li><a href={`${BASE_URL}`}>Home</a></li>
        <li><a href={`${BASE_URL}about`}>About</a></li>
        <li><a href={`${BASE_URL}blog`}>Blog</a></li>
      </ul>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-primary);
    color: #fff;
    text-align: center;
    padding: 20px;
    margin-top: 60px;
  }

  .footer .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer a {
    color: #a741ff;
  }

  .footer a:hover {
    text-decoration: underline;
  }

  .footer h3 {
    margin-bottom: 10px;
  }

  .footer div:nth-child(1) {
    text-align: left;
  }

  @media (max-width: 500px) {
    .footer div:nth-child(2) {
      display: none;
    }
  }
</style>

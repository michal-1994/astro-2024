---
const name = "Astro";
const style = "purple";
// const users = ["Tom", "Brad", "Max", "Remy"];
const visible = false;
const response = await fetch(
  "https://jsonplaceholder.typicode.com/users?_limit=10"
);
const users = await response.json();
---

<>
  <h1 class={style}>{name}</h1>

  <ul>
    {users.map((user: any) => <li>{user.name}</li>)}
  </ul>

  {visible ? <p>Visible</p> : <p>Not visible</p>}
</>

<style>
  h1 {
    color: red;
  }

  .purple {
    color: purple;
  }
</style>
